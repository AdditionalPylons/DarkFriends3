<Window x:Class="DarkFriendsInjector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DarkFriends3 Injector" Height="120" Width="380" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Margin="5" x:Name="statusText" TextWrapping="Wrap" Text="Idle" VerticalAlignment="Top" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="enableButton" Click="enableButton_Click">Search</Button>
                <Button x:Name="disableButton" Click="disableButton_Click" IsEnabled="False">Stop Search</Button>
            </StackPanel>
            <CheckBox Name="debugCheckBox" HorizontalAlignment="Center" Checked="debugCheckBox_Checked">
                Enable Debug Console
            </CheckBox>
        </StackPanel>

    </Grid>
</Window>
